<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= link_to 'New', new_task_path, :class => "btn btn-primary"%>
<h3>Due Soon!</h3>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%= model_class.human_attribute_name(:duedate) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th>Mark Complete?</th>
  </tr>
  </thead>
  <tbody>
  <% @dues.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.duedate.strftime("%b %d %Y") %></td>
        <td><%= task.created_at.strftime("%b %d %Y") %></td>
        <td>
          <%=  link_to "Completed!", mark_completed_path(task.id), :method => :put, :class => 'btn btn-success' %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>

